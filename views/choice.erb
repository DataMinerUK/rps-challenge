<div class="checkbox-inline">
  <h3>Welcome <%= @user %></h3>
  <p>Select your choice below</p>

  <form action='/outcome' method='POST' class="radio-inline">
    <% ($game.options).each do |option| %>
      <input type='radio' name='<%= option %>'><label><%= option.capitalize %></label>
      <br>
    <% end %>
    <br>
    <input type='submit' value='Choose' style='color: white; background-color: black;'>
  </form>
  <br><br>

  <h4>Rules</h4>
  <ul class="list-group">
    <% ($game.rules).each do |rule| %>
      <li class="list-group-item"><%= rule %></li>
    <% end %>
  </ul>
</div>
