<h1>Rock Paper Scissors</h1>

<h2>Rules</h2>
<ul>
  <% (Game::RULES).each do |rule| %>
    <li><%= rule %></li>
  <% end %>
</ul>

<form action='/start'>

  <input type='radio' name='single'><label>Single Player</label>
  <br>
  <input type='radio' name='multi'><label>Multi Player</label>
  <br>

  <input type='submit' value='Start Game'>
</form>
